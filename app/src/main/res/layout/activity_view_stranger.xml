<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".ui.main.users.ViewStrangerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:background="@drawable/background_profile_2"
        android:orientation="vertical"
        android:weightSum="20">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/mAvatarStranger"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="15"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_avatar"
            app:civ_border_color="@color/white"
            app:civ_border_overlay="true"
            app:civ_border_width="2dp"
            tools:ignore="NestedWeights" />

        <TextView
            android:id="@+id/mNameStranger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/txt_name_user"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="10">

            <Button
                android:id="@+id/mBtnAddFriend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="7"
                android:background="@drawable/btn_add_friend"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/txt_add_friend"

                android:textColor="#ffff" />

            <Button
                android:id="@+id/mBtnCancelFriend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_weight="3"
                android:background="@drawable/btn_add_friend"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/txt_send_sms"
                android:textColor="#ffff" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60"
        android:background="@drawable/background_profile"
        android:orientation="vertical"
        android:weightSum="120">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            tools:ignore="NestedWeights">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="120">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="40"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="100"
                        tools:ignore="NestedWeights">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_weight="30"
                            android:src="@drawable/ic_home" />

                        <TextView
                            android:id="@+id/mViewHomeTown"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="70"
                            android:text="@string/txt_home_town"
                            android:textColor="@color/color_info"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="40"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="100"
                        tools:ignore="NestedWeights">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_weight="30"
                            android:src="@drawable/ic_cake" />

                        <TextView
                            android:id="@+id/mViewBirthDay"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="70"
                            android:text="@string/txt_birth_day"
                            android:textColor="@color/color_info"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="40"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="100"
                        tools:ignore="NestedWeights">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_weight="30"
                            android:src="@drawable/ic_book" />

                        <TextView
                            android:id="@+id/mViewEnglishCertificate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="70"
                            android:text="@string/txt_english_certificate"
                            android:textColor="@color/color_info"
                            android:textSize="18sp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>