<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".ui.main.stranger.ViewStrangerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:background="@drawable/bg_profile_2"
        android:orientation="vertical"
        android:weightSum="20">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/mAvatarProfile"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_weight="18"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_avatar"
            app:civ_border_color="@color/white"
            app:civ_border_overlay="true"
            app:civ_border_width="3dp"
            tools:ignore="NestedWeights" />

        <TextView
            android:id="@+id/mUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/textView.text.name_user"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="10">

            <Button
                android:id="@+id/mBtnSaveProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="7"
                android:background="@drawable/btn_add_friend"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/textView.text.save_profile"
                android:textColor="#ffff"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/mProgressLoadProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="70"
        android:background="@drawable/bg_profile"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="40"
            tools:ignore="NestedWeights">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="45">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="15"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="100"
                        tools:ignore="NestedWeights">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_weight="10"
                            android:src="@drawable/ic_home" />

                        <TextView
                            android:id="@+id/mTxtHomeTown"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_weight="70"
                            android:textColor="@color/color_name_user" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="15"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="100"
                        tools:ignore="NestedWeights">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_weight="10"
                            android:src="@drawable/ic_cake" />

                        <TextView
                            android:id="@+id/mTxtBirthDay"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_weight="70"
                            android:textColor="@color/color_name_user" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="15"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="100"
                        tools:ignore="NestedWeights">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_weight="10"
                            android:src="@drawable/ic_book" />

                        <TextView
                            android:id="@+id/mTxtEnglishCertificate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:layout_weight="70"
                            android:textColor="@color/color_name_user" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="50"
            app:cardCornerRadius="5dp">

            <TextView
                android:id="@+id/mTxtDescriptionProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:text="@string/textView.text.description_yourself" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>